<div align='center'>
    <h2>
        <% if @artist %>
            <%= @artist.name %>のページ
        <% else %>
            <font color='ff0000'>
                ※まだ'<%= @new_name %>'は登録されていません。
            </font>
        <% end %>
    </h2>
</div>

<table class="table table-condensed">
  <tr>
    <th>名前</th>
    <td><%= @artist.name %>(<%= @artist.name_kana %>)</td>
  </tr>
  <tr>
    <th>表示名</th>
    <td><font color=<%= @artist.rgb %>><%= @artist.name_view %></font></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= sex_translate(@artist.sex) %></td>
  </tr>
  <tr>
    <th>タイプ</th>
    <td><%= type_translate(@artist.type_id) %></td>
  </tr>
</table>

<div name='cd_list'>
    <% if @cds.present? %>
        <font color='ff0000'>CD情報</font>
        <table class="table table-condensed">
          <tr>
            <th>タイトル</th>
            <th>発売日</th>
            <th>操作</th>
          </tr>
          <% @cds.each do |cd| %>
              <tr>
                <td><%= cd.title %></td>
                <td><%= cd.release_date %></td>
                <td>
                  <form method="post" action="<%= @artist.name %>/del_cd">
                    <input type="submit" class='btn btn-xs btn-danger btn-md' value="削除" onClick="return DeleteCheck('<%= cd.title %>');">
                    <input type="hidden" name="cd_id" value="<%= cd.id %>">
                  </form>
                </td>
              </tr>
          <% end %>
        </table>
        <a href="<%= @artist.name %>/add_cd" class='btn btn-primary'>追加するよ</a>
    <% else %>
        <a href="<%= @artist.name %>/add_cd" class='btn btn-primary'>追加しないと！</a>
    <% end %>
</div>














